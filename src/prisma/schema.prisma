generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Product {
  id          String     @id @default(uuid()) @db.Uuid
  slug        String     @unique
  name        String     @unique
  price       Int
  discount    Int
  category    Category
  stock       Int
  description String
  images      String[]
  properties  Property[]
}

model Property {
  id        String  @id @default(uuid()) @db.Uuid
  name      String
  value     String
  Product   Product @relation(fields: [productId], references: [id])
  productId String  @db.Uuid
}

enum Category {
  celulares
  computadoras
  electronica
  videojuegos
}
